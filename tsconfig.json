{
  "compilerOptions": {
    "jsx": "react-native",
    "target": "ES2022",
    "lib": ["es2022"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "outDir": "lib/typescript",
    "rootDir": "src"
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib", "example"]
}
